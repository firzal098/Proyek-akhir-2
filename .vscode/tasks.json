{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-O0",
                "-I",
                "${fileDirname}",   // <── tells g++ to look for headers in the same folder
                "${file}",
                "-o",
                "${fileDirname}/exe/${fileBasenameNoExtension}.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the currently active C++ file"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "${fileDirname}",   // <── same trick here
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
